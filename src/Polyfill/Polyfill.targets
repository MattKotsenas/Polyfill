<Project>
  <Target Name="PolyfillBeforeCompile"
          AfterTargets="BeforeCompile">
    <PropertyGroup>
      <ValueTupleReferenced Condition="@(PackageReference->WithMetadataValue('Identity', 'System.ValueTuple')->Count()) != 0">true</ValueTupleReferenced>
      <MemoryReferenced Condition="@(PackageReference->WithMetadataValue('Identity', 'System.Memory')->Count()) != 0">true</MemoryReferenced>
      <DefineConstants Condition="'$(MemoryReferenced)' != 'true'">$(DefineConstants);PolyOmitMemoryExtensions</DefineConstants>
      <DefineConstants Condition="'$(ValueTupleReferenced)' != 'true'">$(DefineConstants);PolyOmitValueTuple</DefineConstants>
    </PropertyGroup>
    <Message Text="ValueTupleReferenced $(ValueTupleReferenced)" Importance="High" />
    <Message Text="MemoryReferenced $(MemoryReferenced)" Importance="High" />
  </Target>
</Project>